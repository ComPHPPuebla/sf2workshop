<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="login" path="/login">
        <default key="_controller">controller.login:loginAction</default>
    </route>
    <route id="authenticate" path="/authenticate" methods="POST">
        <default key="_controller">controller.authenticate:authenticateAction</default>
    </route>
    <route id="logout" path="/logout">
        <default key="_controller">controller.logout:logoutAction</default>
    </route>

</routes>